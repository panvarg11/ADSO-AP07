<div class="col-md-6">
    <div
        class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
            <strong class="d-inline-block mb-2 text-primary-emphasis">Posts Creator</strong>
            <h3 class="mb-0">Create a new POST</h3>
            
            <form action="/submit" method="POST">
                <input type="text" name="postTitle" placeholder="Enter the post Title" required>
                <textarea class="pt-10" name="postContent" cols="30" placeholder="Enter post content here" required></textarea>
                <input type="text" name="author" placeholder="Enter your name" required>
                <input type="submit" value="OK">
              </form>
          
        </div>
        <div class="col-auto d-none d-lg-block">
            <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg"
                role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice"
                focusable="false">
                <title>Placeholder</title>
                <rect width="100%" height="100%" fill="#55595c"></rect><text x="5%" y="50%" fill="#eceeef"
                    dy=".3em">Your Name</text>
            </svg>
        </div>
    </div>
</div>
