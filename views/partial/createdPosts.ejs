<div class="row mb-2">

    <%- include('postCreator.ejs') %>




        <%# if posts are created, for loop to display all posts otherwise, show post template%>

            <% if(locals.postedItems){%>


                <% for (let i=postedItems.length; i>0; i--){%>
                    <%# sample template %>
                        <div class="col-md-6">
                            <div
                                class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                                <div class="col p-4 d-flex flex-column position-static">
                                    <strong class="d-inline-block mb-2 text-primary-emphasis">Producto # <%= (postedItems[i-1].id) %>
                                    </strong>
                                    <h3 class="mb-0">
                                        <%= postedItems[i-1].titulo %>
                                    </h3>
                                    <div class="mb-1 text-body-secondary">Imagen de referencia del producto</div>
                                    <p class="card-text mb-auto">
                                        <%= postedItems[i-1].descripcion %>
                                    </p>
                                    <form action="/edit" method="POST" class="buttons">
                                        <button type="submit" value="<%- postedItems[i-1].id %>" name="choice">Editar Producto</button>
                                    </form>
                                    <form action="/delete" method="POST" class="buttons">
                                        <button type="submit" value="<%- postedItems[i-1].id %>" name="choice">Eliminar Producto</button>
                                    </form>
                                </div>
                                <div class="col-auto d-none d-lg-block">
                                    <svg class="bd-placeholder-img" width="200" height="250"
                                        xmlns="http://www.w3.org/2000/svg" role="img"
                                        aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice"
                                        [postedItems.length-1] focusable="false">
                                        <title>Placeholder</title>
                                        <rect width="100%" height="100%" fill="#55595c"></rect><text x="5%" y="50%"
                                            fill="#eceeef" dy=".3em"><%=postedItems[i-1].precio %></text>
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <%# end of sample template %>

                            <% } %>


                                <%} else {%>
                                    <%# sample template %>

                                        <div class="col-md-6">
                                            <div
                                                class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                                                <div class="col p-4 d-flex flex-column position-static">
                                                    <strong class="d-inline-block mb-2 text-primary-emphasis">Producto de ejemplo</strong>
                                                    <h3 class="mb-0">Este es el t√≠tulo del producto</h3>
                                                    <div class="mb-1 text-body-secondary">
                                                        Imagen de Referencia
                                                    </div>
                                                    <p class="card-text mb-auto">Esta es la descripcion del producto
                                                    </p>
                                                    <a href="posts"
                                                        class="icon-link gap-1 icon-link-hover stretched-link">
                                                        Ir a Inventario
                                                        <svg class="bi">
                                                            <use xlink:href="#chevron-right"></use>
                                                        </svg>
                                                    </a>
                                                </div>
                                                <div class="col-auto d-none d-lg-block">
                                                    <svg class="bd-placeholder-img" width="200" height="250"
                                                        xmlns="http://www.w3.org/2000/svg" role="img"
                                                        aria-label="Placeholder: Thumbnail"
                                                        preserveAspectRatio="xMidYMid slice" focusable="false">
                                                        <title>Placeholder</title>
                                                        <rect width="100%" height="100%" fill="#55595c"></rect><text
                                                            x="5%" y="50%" fill="#eceeef" dy=".3em">Precio del Producto</text>
                                                    </svg>
                                                </div>
                                            </div>
                                        </div>
                                        <%# end of sample template %>
                                            <%}%>


</div>